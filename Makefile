# SIMPLE ===================================================================================
NAME = Sound
# ==========================================================================================

# SRCS =====================================================================================
SRCS_DIR = 
SRCS =	main.cpp \
# ==========================================================================================

# INCLUDES =================================================================================
INCS_DIR = inc/
INCLUDE = -I$(INCS_DIR)
# ==========================================================================================

# DEPEDENCIES ==============================================================================
DEPS = $(INCS_DIR)/
# ==========================================================================================

# FLAGS ====================================================================================
DEBUG = -g -fsanitize=address
FLAGS = $(DEBUG) -pedantic -Wall -Wextra -Werror $(INCLUDE)
# ==========================================================================================

# UTILS ====================================================================================
CC		= c++ #clang++
RM		= rm -rf
# ==========================================================================================

# LIBSNDFILE ===============================================================================
SND		= -I/path/to/libsndfile/include -lsndfile
RM		= rm -rf
# ==========================================================================================

# OBJS =====================================================================================
OBJS_DIR 	= 	objects/
OBJ 		= 	$(SRCS:.cpp=.o)
OBJS 		= 	$(addprefix $(OBJS_DIR), $(OBJ))
# ==========================================================================================

# COLORS  ==================================================================================
GREEN		=	\e[92;5;118m
YELLOW		=	\e[93;5;226m
GRAY		=	\e[33;2;37m
RESET		=	\e[0m
CURSIVE		=	\e[33;3m
# ==========================================================================================

# FROM SUBJECT =============================================================================
$(OBJS_DIR)%.o :	$(SRCS_DIR)%.cpp
	@mkdir -p $(OBJS_DIR)
	@printf "$(GREEN)    - Compiling $(GRAY)$<$(RESET)\n"
	@$(CC) $(FLAGS) -c $< -o $@
	
$(NAME): $(OBJS)
	@$(CC)  $(FLAGS) -o $(NAME) $(OBJS) -lsndfile
	@printf "$(GREEN)    - Executable ready.\n$(RESET)"

all: $(NAME)

clean:
	@$(RM) $(OBJS_DIR)

fclean: clean
	@$(RM) $(NAME)
	@printf "$(YELLOW)    - Executable removed.$(RESET)\n"

re: fclean all
# ==========================================================================================

# SUP ======================================================================================
check: $(NAME)
	./$(NAME)
# ==========================================================================================

.PHONY: all clean fclean re
